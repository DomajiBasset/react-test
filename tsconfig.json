{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "ES2016"
    ],
    "module": "ESNext",
    "jsx": "react", // 確保支援 React 的 JSX
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    ".react-router/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}